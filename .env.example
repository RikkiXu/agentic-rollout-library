# LLM API Configuration
# Copy this file to .env and fill in your actual values

# Your LLM API key
LLM_API_KEY=your_key

# Your LLM API base URL
LLM_BASE_URL=your_endpoint

# Model name to use (defaults to gpt-4 if not set)
# Examples: gpt-4, gpt-4.1, claude-3-sonnet, claude-sonnet-4-20250514
LLM_MODEL_NAME=your_model

# Kubernetes Configuration
# The namespace where pods will be created (defaults to 'default')
K8S_NAMESPACE=default

# Path to kubeconfig file (optional, will use default kubeconfig if not set)
# KUBECONFIG=/path/to/your/kubeconfig
